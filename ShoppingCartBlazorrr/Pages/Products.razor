@page "/"

@inherits ProductsBase
<!--2 😁-->
@if (Products == null)
{
    <h3>Loading products...</h3>
}
else
{
    <h3 class="mb-5"></h3>
    var productCount = Products.Count();

    @if (productCount > 0)
    {

        @foreach (var pGroup in GetGroupedProductsByCategory())
        {
            <h4>@GetCategoryName(pGroup)</h4>
            <div class="row mt-3">
                <DisplayProducts Products="@pGroup.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3">
        }
    }
}